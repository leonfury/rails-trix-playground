<p id="notice"><%= notice %></p>
<p>
    <strong>Body:</strong>
    <!-- trix-editor output here, add in sanitize -->
    <div class="sanitize_body">
        <%= sanitize @content.body, attributes: %w(style src), tags: ['figcaption', 'img', 'div', 'a', 'p', 'span', 'ol', 'ul', 'li', 'br', 'strong', 'em', 'del'] %> 
    </div>
</p>

<p>
  <strong>Subject:</strong>
  <%= @content.subject %>
</p>

<p>
    <strong>Attachment:</strong>
    <% @content.files.each do |f| %>
        <%= link_to "#{f.blob.filename}", f, download: "" %>
    <% end %>
</p>

<%= link_to 'Edit', edit_content_path(@content) %> |
<%= link_to 'Back', contents_path %>
<br><br>
<%= form_with url: content_mail_path(@content.id), method: :post do |f| %>
    <%= f.label :email_to %>
    <%= f.text_field :email %>
    <%= f.submit %>
<% end %>
